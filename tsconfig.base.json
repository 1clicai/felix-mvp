{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@felix/core/*": ["packages/core/src/*"],
      "@felix/token-ledger/*": ["packages/token-ledger/src/*"],
      "@felix/prompt-engine/*": ["packages/prompt-engine/src/*"],
      "@felix/integrations/*": ["packages/integrations/src/*"]
    }
  },
  "include": ["apps", "packages", "prisma"],
  "exclude": ["node_modules", "dist"]
}
